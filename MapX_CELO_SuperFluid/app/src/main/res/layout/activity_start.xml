<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/reltive"
        android:background="@color/colorFigma"
        tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:background="@drawable/roundimage"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/spaceexplore" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-47dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/heading"
        android:textColor="@color/pink"
        android:textColorHighlight="@color/pink"
        android:textColorHint="@color/blue"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/klaytn"
        android:layout_width="108dp"
        android:layout_height="72dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="-55dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/celo" />

    <ImageView
        android:id="@+id/klaytsn"
        android:layout_width="107dp"
        android:layout_height="76dp"
        android:layout_below="@+id/imageView3"

        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/klaytn"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/superfluid_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/klaytn"

        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins"
        android:text="Explore the World,\n one NFT at Time "
        android:textColor="#FFFAFA"
        android:textSize="24dp" />
</RelativeLayout>